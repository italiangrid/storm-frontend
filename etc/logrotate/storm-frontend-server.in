    size=50M
    lastaction
        DATE=`date +%Y-%m-%d`; mv @localstatedir@/log/@PACKAGE_PREFIX_NAME@/@PACKAGE@.log.1.gz @localstatedir@/log/@PACKAGE_PREFIX_NAME@/@PACKAGE@.log.$DATE.gz
    endscript
}

