##### StoRM frontend configuration file #####
fe.port = 8444
fe.threadpool.threads.number = 50
fe.threadpool.maxpending = 200       # default is 200
fe.gsoap.maxpending = 2000           # default is 2000

# Log options
log.filename = @prefix@/var/log/storm-frontend.log
log.debuglevel = INFO      # Allowed values: ERROR, WARN, INFO, DEBUG, DEBUG2.

# Security settings
#security.disable.mapping = false     # default is "false"
#security.disable.vomscheck = false   # default is "false"
security.gridmapfile = /etc/grid-security/grid-mapfile
security.hostcert = /etc/grid-security/storm/hostcert.pem
security.hostkey = /etc/grid-security/storm/hostkey.pem

# Backend XMLRPC server information
be.xmlrpc.host = locahost
#be.xmlrpc.port = 8080    # default is 8080
#be.xmlrpc.path = /RPC2   # default is /RPC2

proxy.dir = @prefix@/var/proxy
#proxy.user = storm       # default is storm

# Database
db.host = localhost
db.user = storm
db.passwd = password

# WSDL to be returned to a GET request
wsdl.file = @prefix@/wsdl/srm.v2.2.wsdl

