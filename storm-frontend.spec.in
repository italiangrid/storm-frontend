#fi

%install
if [ -d $RPM_BUILD_ROOT ]; then rm -rf $RPM_BUILD_ROOT; fi
mkdir -p $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT
#mkdir -p $RPM_BUILD_ROOT/etc/init.d $RPM_BUILD_ROOT/etc/cron.d
#mv -f $RPM_BUILD_ROOT/%{prefix}/etc/init.d/storm-frontend $RPM_BUILD_ROOT/etc/init.d
#rm -f $RPM_BUILD_ROOT/%{prefix}/%{libtype}/libglobus-gridftp-server-StoRM-%{flavor}.la

%post
#during an install, the value of the argument passed in is 1
#during an unupgrade, the value of the argument passed in is 2
if [ "$1" = "1" ] ; then
echo "The StoRM FrontEnd server is installed but NOT configured yet.
You need to use yaim to configure the server.
"
echo 'create ln for /etc/init.d/storm-frontend'
ln -sf %{prefix}/etc/init.d/storm-frontend /etc/init.d/storm-frontend
echo 'create ln for /etc/cron.d/storm-frontend.cron'
ln -sf %{prefix}/etc/cron.d/storm-frontend.cron /etc/cron.d/storm-frontend.cron
fi
if [ "$1" = "2" ] ; then
echo "The StoRM FrontEnd server has been upgraded but NOT configured yet.
You need to use yaim to configure the server.
"
if [ -s "/etc/init.d/storm-frontend" ] ; then
echo 'stop service storm-frontend'
/etc/init.d/storm-frontend stop &> /dev/null || :
fi
fi;

%preun
#during an upgrade, the value of the argument passed in is 1
#during an uninstall, the value of the argument passed in is 0
if [ "$1" = "0" ] ; then
if [ -s "/etc/init.d/storm-frontend" ] ; then
echo 'stop service storm-frontend and remove ln /etc/init.d/storm-frontend'
/etc/init.d/storm-frontend stop &> /dev/null || :
rm -f /etc/init.d/storm-frontend
fi
if [ -s "/etc/cron.d/storm-frontend.cron" ] ; then
echo 'remove ln /etc/cron.d/storm-frontend.cron'
rm -f /etc/cron.d/storm-frontend.cron
fi
fi;
if [ "$1" = "1" ] ; then
if [ -s "/etc/init.d/storm-frontend" ] ; then
echo 'stop service storm-frontend'
/etc/init.d/storm-frontend stop &> /dev/null || :
fi
fi;

%postun
#during an upgrade, the value of the argument passed in is 1
#during an uninstall, the value of the argument passed in is 0
if [ "$1" = "1" ] ; then
if [ -s "/etc/init.d/storm-frontend" ] ; then
echo 'remove old file'
rm -f /etc/init.d/storm-frontend
rm -f /etc/init.d/storm-frontend.*
fi
if [ -s "/etc/cron.d/storm-frontend.cron" ] ; then
echo 'remove old file'
rm -f /etc/cron.d/storm-frontend.cron
rm -f /etc/cron.d/storm-frontend.cron.*
fi
echo 'create ln for /etc/init.d/storm-frontend'
ln -sf %{prefix}/etc/init.d/storm-frontend /etc/init.d/storm-frontend
echo 'create ln for /etc/cron.d/storm-frontend.cron'
ln -sf %{prefix}/etc/crond.d/storm-frontend.cron /etc/cron.d/storm-frontend.cron
fi;
if [ "$1" = "0" ] ; then
if [ -s "/etc/init.d/storm-frontend" ] ; then
echo 'remove old file'
rm -f /etc/init.d/storm-frontend
fi
if [ -s "/etc/cron.d/storm-frontend.cron" ] ; then
echo 'remove old file'
rm -f /etc/cron.d/storm-frontend.cron
fi
fi;

%files %{flavorthr}
%defattr(-,root,root)
%attr(755,root,root) %{prefix}/etc/cron.d/storm-frontend.cron
%attr(755,root,root) %{prefix}/etc/init.d/storm-frontend
%{prefix}/etc/logrotate.d/storm-frontend.logrotate
%{prefix}/etc/storm-frontend.conf.template
%defattr(755,root,root)
%{prefix}/sbin/storm-frontend
%{prefix}/share/doc/storm-frontend-server-%{version}/LICENSE
%{prefix}/wsdl/srm.v2.2.wsdl

%clean
rm -rf $RPM_BUILD_ROOT

